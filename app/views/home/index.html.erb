<h1>Listagem dos filmes</h1>

<div class="movie-container">
  <% @movies.each do |movie| %>
    <div class="movie-card">
      <% if movie.cover.attached? %>
        <%= image_tag movie.cover, height: 200 %>
      <% end %>
      <p>
        <strong>Filme: </strong><%= movie.title %> (<%= movie.release_date %>) [<%= movie.movie_status %>]
        <div class="button-container">
          <button><%= link_to 'Ver mais', movie %></button>
          <button><%= link_to 'Apagar', movie, data: { turbo_method: :delete, turbo_confirm: 'Tem certeza que deseja apagar?' } %></button>
        </div>
      </p>
    </div>
  <% end %>
</div>
